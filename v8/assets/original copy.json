{
  "params": {
    "score": 0.6,
    "requested": 10000.00,
    "pre-approved": 5000.00,
    "installment": 12
  },
  "steps": [
    {
      "condition": {
        "left": "params.requested",
        "right": "params.pre-approved",
        "operator": "less_than"
      },
      "then": {
        "payload": "params.requested"
      },
      "else": {
        "steps": [
          {
            "condition": {
              "left": "params.score",
              "right": 0.5,
              "operator": "greater_than"
            }
          },
          {
            "id": "approved",
            "payload": {
              "total": "(params.requested * 0.3) + params.pre-approved"
            }
          },
          {
            "condition": {
              "left": "steps.approved.total",
              "right": 10000.00,
              "operator": "greater_than"
            },
            "then": {
              "return": 10000.00
            },
            "else": {
              "return": "steps.approved.total"
            }
          }
        ]
      }
    },
    {
      "condition": {
        "left": "steps.step1.score",
        "right": 500,
        "operator": "greater_than"
      },
      "then": {
        "return": true
      }
    }
  ]
}